rule "Livingroom Evening Lights on AKA set Mood"
when
  Time cron "0 0 17 ? * * " or
  Item LivingRoomMultisensor_SensorLuminance changed or
  Item vLivingroomMood changed
then
  var Number hour = now.getHourOfDay()
  var Number luminance = LivingRoomMultisensor_SensorLuminance.state as Number;
  
  //the lights should come up to 'evening' level if the luminace gets below 30, or 
  //at 5pm, whichever comes first. but don't turn on after 9pm  for luminance

  var changeIsByMoodChange = triggeringItem === vLivingroomMood;
  var reason = if (changeIsByMoodChange) { REASON_OTHER } else if (triggeringItem===LivingRoomMultisensor_SensorLuminance) {REASON_WEATHER} else { REASON_TIME };
  var sofa_level  = 100;
  var floor_level = 100;
  var mantle_level= ON;
  var couch_level = 100;
  var curio_level = 100;
  var xmas_tree   = ON;


  switch vLivingroomMood.state {
      case MOOD_NORMAL: {
        sofa_level  = 100;
        floor_level = 100;
        mantle_level= ON;
        couch_level = 100;
        curio_level = 100;
        }
      case MOOD_TV: {
        sofa_level  = 20;
        floor_level = 0;
        mantle_level= OFF;
        couch_level = 15;
        curio_level = 15;
        }
      case MOOD_MOVIE: {
        sofa_level  = 12;
        floor_level = 0;
        mantle_level= OFF;
        couch_level = 0;
        curio_level = 0;
        xmas_tree   = OFF;
        }
      case MOOD_COZY: {
        sofa_level  = 20;
        floor_level = 20;
        mantle_level= OFF;
        couch_level = 15;
        curio_level = 40;
      }
      case MOOD_DARK: {
        sofa_level  = 0;
        floor_level = 0;
        mantle_level= OFF;
        couch_level = 0;
        curio_level = 0;
        xmas_tree   = OFF;
      }  
  }


  if ((hour >= 17 && hour <= 18) || (luminance < 40 && hour > 13 && hour < 21) || changeIsByMoodChange) {
    //automationLock.lock()
    try{
        isUpdateAutomatic = 1;

        if (isOKToTurnOnBecause.apply(SofaTableLamps_Dimmer, reason, lastStateReason, lastStateDate) || changeIsByMoodChange){
            SofaTableLamps_Dimmer.sendCommand(sofa_level);
            lastStateReason.put(SofaTableLamps_Dimmer.name, reason);
            lastStateDate.put(SofaTableLamps_Dimmer.name, now);
        }

        if (isOKToTurnOnBecause.apply(FloorLamps_Dimmer, reason, lastStateReason, lastStateDate) || changeIsByMoodChange){
            FloorLamps_Dimmer.sendCommand(floor_level);
            lastStateReason.put(FloorLamps_Dimmer.name, reason);
            lastStateDate.put(FloorLamps_Dimmer.name, now);
        }

        if (isOKToTurnOnBecause.apply(MantleLight_Switch, reason, lastStateReason, lastStateDate) || changeIsByMoodChange){
            MantleLight_Switch.sendCommand(mantle_level);
            lastStateReason.put(MantleLight_Switch.name, reason);
            lastStateDate.put(MantleLight_Switch.name, now);
        }

        if (isOKToTurnOnBecause.apply(CouchLamps_Dimmer, reason, lastStateReason, lastStateDate) || changeIsByMoodChange){
            CouchLamps_Dimmer.sendCommand(couch_level);
            lastStateReason.put(CouchLamps_Dimmer.name, reason);
            lastStateDate.put(CouchLamps_Dimmer.name, now);
        }

        if (isOKToTurnOnBecause.apply(CurioCabinet_Dimmer, reason, lastStateReason, lastStateDate) || changeIsByMoodChange){
            CurioCabinet_Dimmer.sendCommand(curio_level);
            lastStateReason.put(CurioCabinet_Dimmer.name, reason);
            lastStateDate.put(CurioCabinet_Dimmer.name, now);
        }

        if (isOKToTurnOnBecause.apply(XMasTree_Switch, reason, lastStateReason, lastStateDate) || changeIsByMoodChange){
            XMasTree_Switch.sendCommand(xmas_tree);
            lastStateReason.put(XMasTree_Switch.name, reason);
            lastStateDate.put(XMasTree_Switch.name, now);
        }



        if (changeIsByMoodChange && vLivingroomMood.state == MOOD_MOVIE) {
            //normally these items aren't controlled by the livingroom, but they're
            //in view and can be annoying while watching TV
            //since they don't participate in the scene, we'll set their status to manual
            //so they don't come back up on their own for a while.
            logInfo("movie_scene.rules", "Movie time is triggering, checking diningroom light state: "  + (DiningroomLights_Dimmer.state as Number).toString);

            if (DiningroomLights_Dimmer.state as Number > 20) {
                logInfo("Diningroom Lights were over 20")
                DiningroomLights_Dimmer.sendCommand(15);
                lastStateReason.put(DiningroomLights_Dimmer.name, REASON_MANUAL);
                lastStateDate.put(DiningroomLights_Dimmer.name, now);
            }

            if (BarLights_Dimmer.state as Number > 10) {
                BarLights_Dimmer.sendCommand(25);
                lastStateReason.put(BarLights_Dimmer.name, REASON_MANUAL);
                lastStateDate.put(BarLights_Dimmer.name, now);
            }
        } 

        Thread.sleep(200); //let everything catch up before turning off automatic updates
    }
    catch (Throwable t) {
        logError("eveninglights", t.getMessage())
    }
    finally {
        isUpdateAutomatic = 0;
        //automationLock.lock();
    }
  }
end


