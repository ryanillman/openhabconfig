            bulb4_value = new HSBType(new DecimalType(120), new PercentType(80), (RgbwBulb1_Color.state as HSBType).brightness);
        }
        case MOOD_FESTIVE_STP: {
            bulb1_device = RgbwBulb1_Color
            bulb1_value = new HSBType(new DecimalType(120), new PercentType(80), (RgbwBulb1_Color.state as HSBType).brightness);

            bulb2_device = RgbwBulb2_Color
            bulb2_value = new HSBType(new DecimalType(120), new PercentType(80), (RgbwBulb1_Color.state as HSBType).brightness);

            bulb3_device = RgbwBulb3_Color
            bulb3_value = new HSBType(new DecimalType(120), new PercentType(80), (RgbwBulb1_Color.state as HSBType).brightness);

            bulb4_device = RgbwBulb4_Color
            bulb4_value = new HSBType(new DecimalType(120), new PercentType(80), (RgbwBulb1_Color.state as HSBType).brightness);
        }
        case MOOD_FESTIVE_JULY4: {
            bulb1_device = RgbwBulb1_Color
            bulb1_value = new HSBType(new DecimalType(0), new PercentType(80), (RgbwBulb1_Color.state as HSBType).brightness);

