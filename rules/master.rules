rule "Nighttime"
when
    Time cron "0 30 22 ? * MON,TUE,WED,THU,SUN *" or
    Time cron "0 59 23 ? * FRI,SAT *" or
    Item Scene_NightLights received command ON
then
    //automationLock.lock()
    try {
        isUpdateAutomatic = 1;

        gGoodnightLights.members.forEach[ i | 
            if (isOKToTurnOffBecause.apply(i, REASON_GOODNIGHT, lastStateReason, lastStateDate)) {
                if (i instanceof DimmerItem /*&& OFF !== i.state && 0 !== i.state*/) {
                    //it's a dimmer, and it's on - we'll set the dim level super low before turning it off
                    //so that when nighlights turn on they're not too bright
                    i.sendCommand(15)
                }

		Thread.sleep(100); //hopefully enough time to let the change actuall propagate out

                i.sendCommand(OFF);
                lastStateReason.put(i.name, REASON_GOODNIGHT);
                lastStateDate.put(i.name, now);
            }
            true
        ]

        Scene_NightLights.sendCommand(OFF);

        Thread.sleep(200);
    }
    catch (Throwable t) {
        logError("nighttime", t.getMessage())
    }
    finally {
        Thread.sleep(300);
        isUpdateAutomatic = 0;
        //automationLock.unlock()
    }
end


